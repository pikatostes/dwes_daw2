{% extends 'base.html.twig' %}

{% block title %}Hello ProductoController!
{% endblock %}

{% block content %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

    <h1>Carrito</h1>

	<table class="table">
		<thead>
			<tr>
				<th>ID</th>
				<th>Nombre</th>
				<th>Descripción</th>
				<th>Código</th>
				<th>Detalles</th>
			</tr>
		</thead>
		<tbody>
			{% for producto in app.session.get('carrito') %}
				<tr>
					<td>{{ producto.id }}</td>
					<td>{{ producto.nombre }}</td>
					<td>{{ producto.descripcion }}</td>
					<td>{{ producto.code }}</td>
					<td>
						<a href="{{ path('eliminarCarrito', {'id': producto.id}) }}" class="btn btn-danger">Eliminar</a>
					</td>
				</tr>
			{% else %}
				<li>No hay productos en el carrito.</li>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
